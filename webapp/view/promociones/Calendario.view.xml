<mvc:View
    controllerName="com.invertions.sapfiorimodinv.controller.promociones.Calendario"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <Page
        id="calendarioPage"
        title="Calendario de Promociones"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <VBox class="sapUiMediumMargin">
                <!-- Header con controles -->
                <Panel>
                    <l:Grid defaultSpan="L6 M6 S12" class="sapUiSmallMargin">
                        <l:content>
                            <!-- Filtros -->
                            <VBox>
                                <Label text="Estado" />
                                <Select
                                    selectedKey="{calendarModel>/filters/estado}"
                                    change="onFilterChange"
                                    width="100%"
                                >
                                    <core:Item key="all" text="Todas" />
                                    <core:Item key="active" text="Activas" />
                                    <core:Item key="scheduled" text="Programadas" />
                                    <core:Item key="finished" text="Finalizadas" />
                                </Select>
                            </VBox>

                            <VBox>
                                <Label text="Buscar" />
                                <SearchField
                                    value="{calendarModel>/filters/search}"
                                    search="onFilterChange"
                                    placeholder="Nombre de promoción..."
                                    width="100%"
                                />
                            </VBox>

                            <VBox>
                                <Label text="Vista" />
                                <SegmentedButton
                                    selectedKey="{calendarModel>/viewMode}"
                                    selectionChange="onViewModeChange"
                                >
                                    <items>
                                        <SegmentedButtonItem key="month" text="Mes" icon="sap-icon://calendar" />
                                        <SegmentedButtonItem key="agenda" text="Agenda" icon="sap-icon://list" />
                                    </items>
                                </SegmentedButton>
                            </VBox>

                            <VBox class="sapUiSmallMarginTop">
                                <Button
                                    text="Exportar CSV"
                                    icon="sap-icon://excel-attachment"
                                    press="onExport"
                                    type="Emphasized"
                                />
                            </VBox>
                        </l:content>
                    </l:Grid>
                </Panel>

                <!-- Vista Mensual -->
                <Panel visible="{= ${calendarModel>/viewMode} === 'month' }" class="sapUiMediumMarginTop">
                    <headerToolbar>
                        <OverflowToolbar>
                            <Title text="{calendarModel>/currentMonthYear}" level="H3" />
                            <ToolbarSpacer />
                            <Button
                                icon="sap-icon://navigation-left-arrow"
                                press="onPreviousMonth"
                                type="Transparent"
                            />
                            <Button
                                text="Hoy"
                                press="onToday"
                                type="Transparent"
                            />
                            <Button
                                icon="sap-icon://navigation-right-arrow"
                                press="onNextMonth"
                                type="Transparent"
                            />
                        </OverflowToolbar>
                    </headerToolbar>

                    <content>
                        <VBox>
                            <!-- Días de la semana -->
                            <l:Grid defaultSpan="L1.714 M1.714 S1.714" class="calendar-header">
                                <l:content>
                                    <Text text="Dom" class="calendar-day-header" />
                                    <Text text="Lun" class="calendar-day-header" />
                                    <Text text="Mar" class="calendar-day-header" />
                                    <Text text="Mié" class="calendar-day-header" />
                                    <Text text="Jue" class="calendar-day-header" />
                                    <Text text="Vie" class="calendar-day-header" />
                                    <Text text="Sáb" class="calendar-day-header" />
                                </l:content>
                            </l:Grid>

                            <!-- Días del mes -->
                            <l:Grid 
                                defaultSpan="L1.714 M1.714 S1.714" 
                                class="calendar-grid"
                                id="calendarGrid"
                            >
                                <l:content>
                                    <!-- Los días se generarán dinámicamente en el controlador -->
                                </l:content>
                            </l:Grid>
                        </VBox>
                    </content>
                </Panel>

                <!-- Vista Agenda -->
                <Panel visible="{= ${calendarModel>/viewMode} === 'agenda' }" class="sapUiMediumMarginTop">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Agenda de Promociones" level="H3" />
                            <ToolbarSpacer />
                            <Text text="{calendarModel>/filteredPromotions/length} promociones" />
                        </Toolbar>
                    </headerToolbar>

                    <content>
                        <List
                            items="{calendarModel>/filteredPromotions}"
                            noDataText="No hay promociones que coincidan con los filtros"
                            growing="true"
                            growingThreshold="20"
                        >
                            <CustomListItem type="Navigation" press="onPromotionPress">
                                <VBox class="sapUiSmallMargin">
                                    <HBox justifyContent="SpaceBetween" alignItems="Start">
                                        <HBox alignItems="Center" class="sapUiTinyMarginEnd" width="70%">
                                            <core:Icon
                                                src="sap-icon://calendar"
                                                size="2.5rem"
                                                color="{path: 'calendarModel>', formatter: '.getPromotionColor'}"
                                                class="sapUiMediumMarginEnd"
                                            />
                                            <VBox width="100%">
                                                <Title level="H5" text="{calendarModel>Titulo}" wrapping="true" />
                                                <Text 
                                                    text="{calendarModel>Descripcion}" 
                                                    class="sapUiTinyMarginTop"
                                                    maxLines="2"
                                                />
                                                <HBox class="sapUiTinyMarginTop">
                                                    <ObjectStatus
                                                        text="{path: 'calendarModel>FechaIni', formatter: '.formatDate'} - {path: 'calendarModel>FechaFin', formatter: '.formatDate'}"
                                                        state="None"
                                                        icon="sap-icon://date-time"
                                                    />
                                                </HBox>
                                            </VBox>
                                        </HBox>

                                        <VBox alignItems="End">
                                            <ObjectStatus
                                                text="{path: 'calendarModel>', formatter: '.getPromotionStatusText'}"
                                                state="{path: 'calendarModel>', formatter: '.getPromotionStatusState'}"
                                            />
                                            <VBox alignItems="End" class="sapUiTinyMarginTop">
                                                <HBox>
                                                    <VBox alignItems="Center" class="sapUiTinyMarginEnd">
                                                        <Text text="Descuento" class="sapUiTinyText" />
                                                        <ObjectNumber
                                                            number="{calendarModel>DescuentoPorcentaje}"
                                                            unit="%"
                                                            emphasized="true"
                                                        />
                                                    </VBox>
                                                    <VBox alignItems="Center">
                                                        <Text text="Presentaciones" class="sapUiTinyText" />
                                                        <ObjectNumber
                                                            number="{= ${calendarModel>ProductosAplicables} ? ${calendarModel>ProductosAplicables}.length : 0 }"
                                                            emphasized="true"
                                                        />
                                                    </VBox>
                                                </HBox>
                                            </VBox>
                                        </VBox>
                                    </HBox>

                                    <HBox class="sapUiSmallMarginTop">
                                        <ObjectStatus
                                            text="Creado por: {calendarModel>REGUSER}"
                                            state="Information"
                                            icon="sap-icon://employee"
                                        />
                                        <ObjectStatus
                                            text="{path: 'calendarModel>REGDATE', formatter: '.formatDate'}"
                                            state="None"
                                            class="sapUiTinyMarginBegin"
                                        />
                                    </HBox>
                                </VBox>
                            </CustomListItem>
                        </List>
                    </content>
                </Panel>
            </VBox>
        </content>
    </Page>

    <!-- Dialog de Detalle de Promoción -->
    <Dialog
        id="promoDetailDialog"
        title="{detailModel>/Titulo}"
        contentWidth="800px"
        resizable="true"
        draggable="true"
    >
        <content>
            <VBox class="sapUiMediumMargin">
                <!-- Header con Avatar -->
                <HBox alignItems="Center" class="sapUiMediumMarginBottom">
                    <core:Icon
                        src="sap-icon://product"
                        size="3rem"
                        color="{path: 'detailModel>/', formatter: '.getPromotionColor'}"
                        class="sapUiMediumMarginEnd"
                    />
                    <VBox>
                        <Title level="H4" text="{detailModel>/Titulo}" />
                        <Text text="{detailModel>/Descripcion}" class="sapUiTinyMarginTop" />
                        <HBox class="sapUiTinyMarginTop">
                            <ObjectStatus
                                text="{path: 'detailModel>/', formatter: '.getPromotionStatusText'}"
                                state="{path: 'detailModel>/', formatter: '.getPromotionStatusState'}"
                            />
                            <Text text="Creado por: {detailModel>/REGUSER}" class="sapUiSmallMarginBegin" />
                        </HBox>
                    </VBox>
                </HBox>

                <!-- Información en Cards -->
                <l:Grid defaultSpan="L6 M6 S12">
                    <l:content>
                        <Panel headerText="Fecha de Inicio">
                            <VBox alignItems="Center" class="sapUiSmallMargin">
                                <Title 
                                    level="H5" 
                                    text="{path: 'detailModel>/FechaIni', formatter: '.formatDateFull'}"
                                />
                            </VBox>
                        </Panel>

                        <Panel headerText="Fecha de Fin">
                            <VBox alignItems="Center" class="sapUiSmallMargin">
                                <Title 
                                    level="H5" 
                                    text="{path: 'detailModel>/FechaFin', formatter: '.formatDateFull'}"
                                />
                            </VBox>
                        </Panel>

                        <Panel headerText="Descuento">
                            <VBox alignItems="Center" class="sapUiSmallMargin">
                                <Title level="H5">
                                    <ObjectNumber
                                        number="{detailModel>/DescuentoPorcentaje}"
                                        unit="%"
                                        emphasized="true"
                                        state="Success"
                                    />
                                </Title>
                                <Text 
                                    text="{detailModel>/TipoDescuento}" 
                                    class="sapUiTinyText"
                                />
                            </VBox>
                        </Panel>

                        <Panel headerText="Presentaciones">
                            <VBox alignItems="Center" class="sapUiSmallMargin">
                                <Title level="H5">
                                    <ObjectNumber
                                        number="{= ${detailModel>/ProductosAplicables} ? ${detailModel>/ProductosAplicables}.length : 0 }"
                                        emphasized="true"
                                    />
                                </Title>
                                <Text text="en esta promoción" class="sapUiTinyText" />
                            </VBox>
                        </Panel>
                    </l:content>
                </l:Grid>

                <!-- Lista de Presentaciones -->
                <Panel 
                    headerText="Presentaciones Incluidas"
                    class="sapUiMediumMarginTop"
                    visible="{= ${detailModel>/ProductosAplicables} &amp;&amp; ${detailModel>/ProductosAplicables}.length > 0 }"
                >
                    <List
                        items="{detailModel>/ProductosAplicables}"
                        noDataText="No hay presentaciones"
                    >
                        <StandardListItem
                            title="{detailModel>NombrePresentacion}"
                            description="SKU: {detailModel>SKUID}"
                            info="$ {detailModel>PrecioOriginal}"
                            icon="sap-icon://product"
                        />
                    </List>
                </Panel>

                <!-- Información Adicional -->
                <Panel headerText="Información Adicional" class="sapUiMediumMarginTop">
                    <VBox class="sapUiSmallMargin">
                        <HBox justifyContent="SpaceBetween">
                            <VBox>
                                <Text text="Fecha de Creación" class="sapUiTinyText" />
                                <Text 
                                    text="{path: 'detailModel>/REGDATE', formatter: '.formatDateFull'}"
                                    class="sapUiSmallMarginTop"
                                />
                            </VBox>
                            <VBox alignItems="End" visible="{= !!${detailModel>/MODDATE} }">
                                <Text text="Última Modificación" class="sapUiTinyText" />
                                <Text 
                                    text="{path: 'detailModel>/MODDATE', formatter: '.formatDateFull'}"
                                    class="sapUiSmallMarginTop"
                                />
                            </VBox>
                        </HBox>
                    </VBox>
                </Panel>
            </VBox>
        </content>

        <buttons>
            <Button text="Cerrar" press="onCloseDetailDialog" />
            <Button 
                text="Gestionar Promoción" 
                type="Emphasized"
                press="onManagePromotion"
                icon="sap-icon://edit"
            />
        </buttons>
    </Dialog>
</mvc:View>
